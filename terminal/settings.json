
{
    "$help": "https://aka.ms/terminal-documentation",
    "$schema": "https://aka.ms/terminal-profiles-schema",

    "alwaysShowTabs": true,
    "copyOnSelect": false,
    "defaultProfile": "{2c4de342-38b7-51cf-b940-2309a097f518}",
    "focusFollowMouse": true,
    "showTerminalTitleInTitlebar": false,
    "startOnUserLogin": true,
    "trimBlockSelection": true,
    "useAcrylicInTabRow": true,

    "disabledProfileSources": ["Windows.Terminal.Azure"],

    "newTabMenu": [
        {
            "type": "remainingProfiles"
        }
    ],

    "profiles": {
        "defaults": {
            "backgroundImage": "desktopWallpaper",
            "backgroundImageOpacity": 0.25,
            "backgroundImageStretchMode": "uniformToFill",
            "colorScheme": "Cobalt2",
            "font":
            {
                "face": "CaskaydiaCove Nerd Font Mono"
            },
            "startingDirectory": "C:\\Code",
            "suppressApplicationTitle": true,
            "useAcrylic": true,
            "useAtlasEngine": true
        },
        "list": [
            {
                "guid": "{2c4de342-38b7-51cf-b940-2309a097f518}",
                "name": "Ubuntu",
                "source": "Windows.Terminal.Wsl",
                "startingDirectory": "~/Code"
            },
            {
                "guid": "{b7269733-a636-4cde-90f6-3283b93b968a}",
                "name": "Production",
                "commandline": "wsl -d Ubuntu",
                "colorScheme": "Red Alert",

                "icon": "%USERPROFILE%/Nextcloud/Work/Icons/tux-red.png",
                "backgroundImage": "%USERPROFILE%/Nextcloud/Photos/Backgrounds/canvas_by_roytanck.jpg",
                "backgroundImageOpacity": 0.15,
                "startingDirectory": "~/Code",
                "suppressApplicationTitle": true,
                "tabTitle": "Production",
                "useAcrylic": false
            },
            {
                "guid": "{6f641d20-613c-4431-bac4-b34589fe792b}",
                "name": "PowerShell Core (WSL)",
                "commandline": "wsl -d Ubuntu --cd ~/Code -e pwsh -nologo",
                "colorScheme": "Solarized Dark Higher Contrast",

                "icon": "ms-appx:///ProfileIcons/pwsh.png"
            },
            {
                "guid": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
                "name": "PowerShell Core",
                "source": "Windows.Terminal.PowershellCore",
                "commandline": "pwsh.exe -nologo",
                "colorScheme": "Solarized Dark Higher Contrast"
            },
            {
                "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
                "name": "Windows PowerShell",
                "colorScheme": "Solarized Dark Higher Contrast"
            },
            {
                "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
                "name": "Command Prompt",
                "colorScheme": "Solarized Dark Higher Contrast"
            }
        ]
    },

